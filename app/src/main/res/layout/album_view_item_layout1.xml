<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/album_view_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.asever.weavestory.ui.TouchImageView
                android:id="@+id/album_view_item_img1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="12dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/album_view_item_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/album_view_item_tv_date"
                android:layout_below="@+id/album_view_item_tv_date"
                android:layout_toStartOf="@+id/album_view_item_btn_more_content"
                android:ellipsize="end"
                android:hint="(내용을 입력해주세요)"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/album_view_item_btn_more_content"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignBottom="@+id/album_view_item_content1"
                android:layout_alignEnd="@+id/album_view_item_img1"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/button_transparency_background" />

            <TextView
                android:id="@+id/album_view_item_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/album_view_item_img1"
                android:layout_below="@+id/album_view_item_img1"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>