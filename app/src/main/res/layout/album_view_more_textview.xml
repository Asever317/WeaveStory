<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/more_textview_top_container"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/moreview_bar_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left|center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/more_textview_btn_back"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:allowUndo="false"
                android:background="@color/button_transparency_background" />

            <ImageButton
                android:id="@+id/more_textview_btn_save"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/button_transparency_background" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/more_textview_tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/more_textview_top_container"
        android:padding="20dp"
        android:text="컨텐츠 내용"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/more_textview_edt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/more_textview_top_container"
        android:gravity="top"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />
</RelativeLayout>