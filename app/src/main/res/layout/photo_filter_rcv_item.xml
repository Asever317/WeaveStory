<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filter_item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/photo_filter_item_margin_end"
    android:layout_marginTop="@dimen/photo_filter_item_margin_top"
    android:gravity="center">

    <ImageView
        android:id="@+id/filter_item_img"
        android:layout_width="75dp"
        android:layout_height="65dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/filter_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filter_item_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/photo_filter_item_margin_top"
        android:gravity="center"
        android:singleLine="true"
        android:text="원본"
        android:textColor="@color/white"
        android:textSize="@dimen/photo_filter_item_text_size" />
</RelativeLayout>
